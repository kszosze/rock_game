<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>project</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/${project.build.directory}/test-classes/**</exclude>
        <exclude>**/${project.build.directory}/generated-sources/**</exclude>
        <exclude>**/${project.build.directory}/archive-tmp</exclude>
        <exclude>**/${project.build.directory}/generated-test-sources/**</exclude>
        <exclude>**/${project.build.directory}/maven-status/**</exclude>
        <exclude>mvnw</exclude>
        <exclude>mvnw.cmd</exclude>
        <exclude>.mvn/**</exclude>
        <exclude>**/assembly/**</exclude>
        <exclude>**/templates/**</exclude>
        <exclude>**/test/**</exclude>
        <exclude>**/src/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
